# ============================================================================
# Development Environment Configuration
# These variables are used when running services locally
# ============================================================================

# ============================================================================
# Service Ports (REQUIRED - will fail if not set)
# ============================================================================

# Dashboard: React development server and web UI (REQUIRED)
VITE_DASHBOARD_PORT=3050
VITE_HOST=0.0.0.0

# Orchestrator: Main API server and workflow engine (REQUIRED)
ORCHESTRATOR_PORT=3051

# Analytics Service: Metrics and analytics API (REQUIRED)
ANALYTICS_SERVICE_PORT=3001

# ============================================================================
# Database Configuration (REQUIRED)
# ============================================================================
DATABASE_URL=postgresql://agentic:agentic_dev@localhost:5433/agentic_sdlc

# ============================================================================
# Redis/Message Bus Configuration (REQUIRED)
# ============================================================================
REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380

# ============================================================================
# API Configuration
# ============================================================================
# Dashboard API URL for local development
VITE_API_URL=http://localhost:3051

# ============================================================================
# API Keys (REQUIRED)
# ============================================================================
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# ============================================================================
# Logging & Environment
# ============================================================================
NODE_ENV=development
LOG_LEVEL=debug
HOST=0.0.0.0
