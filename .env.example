# ============================================================================
# REQUIRED CONFIGURATION - These must be set, no defaults are provided
# ============================================================================

# Service Ports (REQUIRED - will fail if not set)
# Dashboard: React development server and web UI
VITE_DASHBOARD_PORT=3050

# Orchestrator: Main API server and workflow engine
ORCHESTRATOR_PORT=3051

# Analytics Service: Metrics and analytics API
ANALYTICS_SERVICE_PORT=3001

# Database (REQUIRED)
DATABASE_URL=postgresql://agentic:agentic_dev@localhost:5433/agentic_sdlc

# Redis/Message Bus (REQUIRED)
REDIS_URL=redis://localhost:6380
REDIS_PORT=6380
REDIS_HOST=localhost

# ============================================================================
# API Keys (REQUIRED - will fail if not set)
# ============================================================================
ANTHROPIC_API_KEY=your_key_here
OPENAI_API_KEY=your_key_here

# Optional: GitHub integration
GITHUB_TOKEN=your_token_here
GITHUB_OWNER=your_org
GITHUB_REPO=your_repo

# ============================================================================
# Environment & Logging Configuration
# ============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# Dashboard configuration (CRITICAL: MUST include /api/v1 prefix)
VITE_HOST=0.0.0.0
VITE_API_URL=http://localhost:3051/api/v1

# Orchestrator/Service configuration
HOST=0.0.0.0

# ============================================================================
# Optional Features (with defaults)
# ============================================================================
ENABLE_SPRINT_AUTOMATION=true
ENABLE_DAILY_BUILDS=true
ENABLE_AUTO_REMEDIATION=true
ENABLE_METRICS=true