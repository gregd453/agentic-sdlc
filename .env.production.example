# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Database (Use AWS RDS or managed PostgreSQL)
DATABASE_URL=postgresql://username:password@db-host:5432/agentic_sdlc_prod
# Connection pooling settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Redis (Use AWS ElastiCache or managed Redis cluster)
REDIS_URL=redis://redis-cluster-host:6379
REDIS_CLUSTER_MODE=true
REDIS_TLS=true

# API Keys (Use AWS Secrets Manager or Vault)
ANTHROPIC_API_KEY=sk-ant-api03-xxx
OPENAI_API_KEY=sk-xxx

# GitHub
GITHUB_TOKEN=ghp_xxx
GITHUB_OWNER=your_org
GITHUB_REPO=your_repo

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Ports
ORCHESTRATOR_PORT=3000
PIPELINE_PORT=3001
AGENT_PORT=3002

# Features
ENABLE_SPRINT_AUTOMATION=true
ENABLE_DAILY_BUILDS=true
ENABLE_AUTO_REMEDIATION=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# AWS Configuration (for deployment agent)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
ECR_REGISTRY=123456789012.dkr.ecr.us-east-1.amazonaws.com
ECS_CLUSTER=agentic-sdlc-prod

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
ENABLE_CORS=true
CORS_ORIGIN=https://your-domain.com

# Logging (Centralized logging)
LOG_FORMAT=json
LOG_DESTINATION=cloudwatch
LOG_GROUP=/aws/agentic-sdlc/prod

# Performance
NODE_OPTIONS=--max-old-space-size=4096
CLUSTER_MODE=true
CLUSTER_INSTANCES=0  # 0 = auto (CPU cores)

# Secrets Management
SECRETS_PROVIDER=aws-secrets-manager  # or 'vault'
SECRETS_REGION=us-east-1

# Alerts
ALERT_EMAIL=ops@your-domain.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
