  "recommendations": {
    "production": [
      "Set LOG_LEVEL=info to reduce noise",
      "Override deployment-agent, orchestrator to info for visibility",
      "Use DOCKER_ENV=true if containerized",
      "Monitor ERROR and FATAL logs for production issues",
      "Consider centralized log aggregation"
    ],
    "development": [
      "Set LOG_LEVEL=debug for full visibility",
      "Enable VERBOSE=true for CLI output",
      "Use module-specific overrides to focus debugging",
      "Leave generic-mock-agent at debug for testing",
      "Check pretty-print is enabled (NODE_ENV=development)"
    ],
