{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentic-sdlc.local/schemas/clarification-request.v1.json",
  "title": "Clarification Request",
  "description": "Request for clarification when requirements are ambiguous or incomplete",
  "type": "object",
  "required": [
    "clarification_id",
    "schema_version",
    "workflow_id",
    "item_id",
    "questions",
    "status",
    "timestamp"
  ],
  "properties": {
    "clarification_id": {
      "type": "string",
      "pattern": "^CLR-[0-9]{4}-[0-9]{5}$",
      "description": "Unique clarification identifier"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (semver)"
    },
    "workflow_id": {
      "type": "string",
      "pattern": "^WF-[0-9]{4}-[0-9]{4}-[0-9]{3}$",
      "description": "Associated workflow ID"
    },
    "item_id": {
      "type": "string",
      "pattern": "^(BI|TASK)-[0-9]{4}-[0-9]{5}$",
      "description": "Backlog item or task ID"
    },
    "context": {
      "type": "string",
      "description": "Context explaining why clarification is needed"
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["question_id", "question", "type"],
        "properties": {
          "question_id": {
            "type": "string",
            "description": "Unique question identifier"
          },
          "question": {
            "type": "string",
            "description": "The clarification question"
          },
          "type": {
            "type": "string",
            "enum": ["open_text", "multiple_choice", "yes_no", "numeric"],
            "description": "Question type"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Options for multiple_choice questions"
          },
          "default_value": {
            "type": "string",
            "description": "Suggested default answer"
          },
          "required": {
            "type": "boolean",
            "default": true,
            "description": "Whether this question must be answered"
          }
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["pending", "answered", "skipped", "escalated"],
      "description": "Current clarification status"
    },
    "answers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["question_id", "answer"],
        "properties": {
          "question_id": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Operator confidence in their answer (0.0 - 1.0)"
          }
        }
      }
    },
    "operator": {
      "type": "string",
      "description": "Email/ID of operator who answered"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of request creation"
    },
    "answered_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when answered"
    },
    "trace_id": {
      "type": "string",
      "description": "OpenTelemetry trace ID"
    }
  },
  "additionalProperties": false
}
