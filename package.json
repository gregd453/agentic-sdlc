{
  "name": "agentic-sdlc",
  "version": "0.1.0",
  "description": "Autonomous AI-driven Software Development Lifecycle System",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "orchestrator:dev": "pnpm --filter @agentic-sdlc/orchestrator dev",
    "orchestrator:build": "pnpm --filter @agentic-sdlc/orchestrator build",
    "db:setup": "pnpm --filter @agentic-sdlc/orchestrator db:setup",
    "db:migrate": "pnpm --filter @agentic-sdlc/orchestrator db:migrate"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "turbo": "^1.10.16",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.11.0"
}