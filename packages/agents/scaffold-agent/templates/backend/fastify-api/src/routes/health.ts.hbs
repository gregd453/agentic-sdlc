import type { FastifyPluginAsync } from 'fastify';
import { successEnvelope, errorEnvelope } from '../types/envelope.js';
import { prisma } from '../server.js';

/**
 * Health check routes
 * Required for production deployment and monitoring
 */
export const healthRoutes: FastifyPluginAsync = async (fastify) => {
  // Basic health check
  fastify.get('/health', async (request, reply) => {
    const requestId = request.id;

    try {
      // Check database connectivity
      await prisma.$queryRaw`SELECT 1`;

      const health = {
        status: 'healthy',
        timestamp: new Date().toISOString(),
        uptime: process.uptime(),
        environment: process.env.NODE_ENV || 'development',
        version: process.env.API_VERSION || '1.0.0',
      };

      return successEnvelope(health, requestId);
    } catch (error) {
      fastify.log.error(error, 'Health check failed');

      reply.code(503);
      return errorEnvelope(
        'SERVICE_UNAVAILABLE',
        'Health check failed',
        error instanceof Error ? error.message : undefined,
        requestId
      );
    }
  });

  // Liveness probe (for k8s)
  fastify.get('/health/live', async (request) => {
    const requestId = request.id;
    return successEnvelope({ status: 'alive' }, requestId);
  });

  // Readiness probe (for k8s)
  fastify.get('/health/ready', async (request, reply) => {
    const requestId = request.id;

    try {
      // Check if database is ready
      await prisma.$queryRaw`SELECT 1`;

      return successEnvelope({ status: 'ready' }, requestId);
    } catch (error) {
      reply.code(503);
      return errorEnvelope(
        'NOT_READY',
        'Service not ready',
        error instanceof Error ? error.message : undefined,
        requestId
      );
    }
  });
};