{
  "name": "@agentic-sdlc/validation-agent",
  "version": "0.1.0",
  "description": "Code validation agent for Agentic SDLC with quality gate enforcement",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/run-agent.ts",
    "start": "tsx src/run-agent.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@agentic-sdlc/base-agent": "workspace:*",
    "@agentic-sdlc/shared-types": "workspace:*",
    "@anthropic-ai/sdk": "^0.24.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^1.4.0",
    "tsx": "^4.7.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
