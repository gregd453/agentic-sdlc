# ==========================================
# Production Dockerfile for Dashboard
# Full build from local sources
# ==========================================

FROM node:20.11.0-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm@9

# Copy workspace configuration and source
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json tsconfig.json ./
COPY packages ./packages
COPY ops ./ops

# Install all dependencies (express is needed for dashboard server)
RUN pnpm install --frozen-lockfile

# Generate Prisma Client (required for dashboard to run)
RUN node_modules/.bin/prisma generate --schema=packages/orchestrator/prisma/schema.prisma || \
    (echo "Prisma not available in binaries, will try at startup" && true)

# Expose port
EXPOSE 3050

# Environment
ENV NODE_ENV=production
ENV PORT=3050

# Health check
HEALTHCHECK --interval=10s --timeout=5s --retries=3 --start-period=15s \
  CMD wget --quiet --tries=1 --spider http://localhost:3050/ || exit 1

# Start Express server
CMD ["node", "packages/dashboard/dist/server/index.js"]
