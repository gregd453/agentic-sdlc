# ==========================================
# Production Dockerfile for Dashboard
# Multi-stage build with optimized caching
# ==========================================

# Stage 1: Build React frontend with asset hashing
FROM node:20.11.0-alpine AS builder

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy workspace files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy source code first
COPY . .

# Install dependencies
RUN pnpm install

# Set environment variables for build
ENV VITE_DASHBOARD_PORT=3050
ENV VITE_ORCHESTRATOR_PORT=3051

# Build frontend (Vite with asset hashing for cache-busting)
WORKDIR /app/packages/dashboard
RUN pnpm run build:frontend

# Build server
RUN pnpm run server:build

# Stage 2: Runtime container (Express serving static + API)
FROM node:20.11.0-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy workspace configuration and source to determine workspace structure
COPY . .

# Install only production dependencies (skip optional deps and scripts)
RUN pnpm install --prod --prefer-offline --no-verify-store-integrity 2>/dev/null || pnpm install --prod 2>&1 | grep -v "ERR!\|WARN" | tail -20

# Copy built artifacts from builder
COPY --from=builder /app/packages/dashboard/dist ./packages/dashboard/dist
COPY --from=builder /app/packages/dashboard/dist/server ./dist/server

# Expose port
EXPOSE 3050

# Environment (will be overridden by container)
ENV NODE_ENV=production
ENV PORT=3050

# Health check (check Express server, not Vite dev server)
HEALTHCHECK --interval=10s --timeout=5s --retries=3 --start-period=15s \
  CMD wget --quiet --tries=1 --spider http://localhost:3050/ || exit 1

# Start Express server serving static files + API
CMD ["node", "dist/server/index.js"]
