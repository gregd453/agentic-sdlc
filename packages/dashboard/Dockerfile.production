# ==========================================
# Multi-Stage Production Dockerfile
# for Agentic SDLC Dashboard + Backend
#
# Combines:
# - React frontend (Vite build)
# - Express backend (Analytics API)
# ==========================================

# ==========================================
# Stage 1: Workspace Dependencies
# ==========================================
FROM node:20.11.0-alpine AS deps
WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8.11.0 --activate

# Copy monorepo files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy dashboard package
COPY packages/dashboard/package.json ./packages/dashboard/

# Copy shared-types package (dependency)
COPY packages/shared/types/package.json ./packages/shared/types/

# Install dependencies
RUN pnpm install --frozen-lockfile

# ==========================================
# Stage 2: Build Frontend + Backend
# ==========================================
FROM node:20.11.0-alpine AS builder
WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8.11.0 --activate

# Copy from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy source files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY packages/dashboard ./packages/dashboard
COPY packages/shared ./packages/shared

# Build arguments
ARG NODE_ENV=production
ARG VITE_API_URL
ARG VITE_WS_URL
ARG VITE_POLLING_INTERVAL=10000

# Set environment for build
ENV NODE_ENV=${NODE_ENV}
ENV VITE_API_URL=${VITE_API_URL}
ENV VITE_WS_URL=${VITE_WS_URL}
ENV VITE_POLLING_INTERVAL=${VITE_POLLING_INTERVAL}

# Build frontend (React + Vite)
WORKDIR /app/packages/dashboard
RUN npm run build:frontend

# Build backend (Express server)
RUN npm run build:server

# Verify builds
RUN test -f /app/packages/dashboard/dist/index.html || (echo "Frontend build failed" && exit 1) && \
    test -f /app/packages/dashboard/dist/server/index.js || (echo "Server build failed" && exit 1) && \
    echo "✓ Frontend built successfully" && \
    echo "✓ Backend built successfully"

# ==========================================
# Stage 3: Production Runtime
# ==========================================
FROM node:20.11.0-alpine AS production

# Install dumb-init for proper signal handling
RUN apk add --no-cache dumb-init

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S app -u 1001

WORKDIR /app

# Copy runtime dependencies (production only)
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./
COPY --from=builder /app/packages/dashboard/dist ./packages/dashboard/dist
COPY --from=builder /app/packages/dashboard/server/package.json ./packages/dashboard/

# Create log directory
RUN mkdir -p /app/logs && chown -R app:nodejs /app

# Switch to non-root user
USER app

# Expose port
EXPOSE 3050

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3050/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})" || exit 1

# Start with dumb-init for proper signal handling
ENTRYPOINT ["dumb-init", "--"]

# Start backend server (serves both API + frontend)
CMD ["node", "packages/dashboard/dist/server/index.js"]
