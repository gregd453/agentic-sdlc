{
  "name": "@agentic-sdlc/dashboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "build": "tsc && vite build && npm run server:build",
    "build:frontend": "tsc && vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "preview": "vite preview",
    "server:dev": "tsx watch server/index.ts",
    "server:build": "tsc --project tsconfig.server.json",
    "server:start": "node dist/server/index.js",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.server.json --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@agentic-sdlc/shared-types": "workspace:*",
    "@prisma/client": "^5.8.0",
    "@tanstack/react-query": "^5.12.0",
    "@tanstack/react-table": "^8.21.3",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "framer-motion": "^10.16.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.17",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "playwright": "^1.44.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.8"
  }
}
