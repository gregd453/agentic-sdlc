#!/usr/bin/env bash

#############################################################################
# DEPRECATED: Use ./dev instead (from project root)
#############################################################################
# This script is deprecated and maintained for backward compatibility only.
# Please use the modern ./dev command from the project root:
#   ./dev start              # Start all services
#   ./dev stop               # Stop all services
#   ./dev restart            # Restart all services
#   ./dev status             # Check service status
#
# This legacy script will be removed in a future version.
#############################################################################

#############################################################################
# Agentic SDLC Development Environment Manager
# Main CLI entry point for managing the complete development stack (DEPRECATED)
#############################################################################

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

# Get script directory
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/../.." && pwd)"
LOG_DIR="${PROJECT_ROOT}/logs"
AI_OUTPUT_DIR="${PROJECT_ROOT}/ai.output"
PID_DIR="${PROJECT_ROOT}/.pids"

# Create necessary directories
mkdir -p "${LOG_DIR}" "${PID_DIR}"

# Load environment variables if .env exists
if [ -f "${PROJECT_ROOT}/.env" ]; then
    export $(grep -v '^#' "${PROJECT_ROOT}/.env" | xargs)
fi

#############################################################################
# Helper Functions
#############################################################################

print_header() {
    echo -e "\n${CYAN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo -e "${WHITE}$1${NC}"
    echo -e "${CYAN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}\n"
}

print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[âœ“]${NC} $1"
}

print_error() {
    echo -e "${RED}[âœ—]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[!]${NC} $1"
}

check_dependencies() {
    print_status "Checking dependencies..."

    local missing_deps=()

    # Check for required commands
    command -v docker >/dev/null 2>&1 || missing_deps+=("docker")
    command -v docker-compose >/dev/null 2>&1 || missing_deps+=("docker-compose")
    command -v node >/dev/null 2>&1 || missing_deps+=("node")
    command -v pnpm >/dev/null 2>&1 || missing_deps+=("pnpm")
    command -v jq >/dev/null 2>&1 || missing_deps+=("jq")

    if [ ${#missing_deps[@]} -gt 0 ]; then
        print_error "Missing dependencies: ${missing_deps[*]}"
        echo "Please install the missing dependencies and try again."
        exit 1
    fi

    print_success "All dependencies satisfied"
}

#############################################################################
# Service Management Functions
#############################################################################

start_infrastructure() {
    print_header "Starting Infrastructure Services"

    print_status "Starting PostgreSQL and Redis..."
    docker-compose -f "${PROJECT_ROOT}/docker-compose.yml" up -d postgres redis

    # Wait for services to be healthy
    print_status "Waiting for services to be healthy..."
    local max_attempts=30
    local attempt=0

    while [ $attempt -lt $max_attempts ]; do
        if docker-compose -f "${PROJECT_ROOT}/docker-compose.yml" ps | grep -q "healthy"; then
            break
        fi
        echo -n "."
        sleep 1
        ((attempt++))
    done
    echo ""

    print_success "Infrastructure services started"
}

stop_infrastructure() {
    print_header "Stopping Infrastructure Services"

    print_status "Stopping PostgreSQL and Redis..."
    docker-compose -f "${PROJECT_ROOT}/docker-compose.yml" stop postgres redis
    print_success "Infrastructure services stopped"
}

start_orchestrator() {
    print_header "Starting Orchestrator"

    cd "${PROJECT_ROOT}/packages/orchestrator"

    print_status "Starting orchestrator service..."
    pnpm dev > "${LOG_DIR}/orchestrator.log" 2>&1 &
    local pid=$!
    echo $pid > "${PID_DIR}/orchestrator.pid"

    # Wait for orchestrator to be ready
    print_status "Waiting for orchestrator to be ready..."
    local max_attempts=30
    local attempt=0

    while [ $attempt -lt $max_attempts ]; do
        if curl -s http://localhost:3000/api/v1/health >/dev/null 2>&1; then
            break
        fi
        echo -n "."
        sleep 1
        ((attempt++))
    done
    echo ""

    print_success "Orchestrator started (PID: $pid)"
}

stop_orchestrator() {
    if [ -f "${PID_DIR}/orchestrator.pid" ]; then
        local pid=$(cat "${PID_DIR}/orchestrator.pid")
        if kill -0 $pid 2>/dev/null; then
            print_status "Stopping orchestrator (PID: $pid)..."
            kill $pid
            rm "${PID_DIR}/orchestrator.pid"
            print_success "Orchestrator stopped"
        else
            print_warning "Orchestrator not running"
            rm "${PID_DIR}/orchestrator.pid"
        fi
    else
        print_warning "Orchestrator PID file not found"
    fi
}

start_agents() {
    print_header "Starting Agents"

    local agents=("scaffold" "validation" "e2e" "integration" "deployment")

    for agent in "${agents[@]}"; do
        print_status "Starting ${agent} agent..."

        local agent_path="${PROJECT_ROOT}/packages/agents/${agent}-agent/dist/run-agent.js"
        if [ -f "$agent_path" ]; then
            node "$agent_path" > "${LOG_DIR}/${agent}-agent.log" 2>&1 &
            local pid=$!
            echo $pid > "${PID_DIR}/${agent}-agent.pid"
            print_success "${agent} agent started (PID: $pid)"
        else
            print_warning "${agent} agent not found at $agent_path"
        fi
    done
}

stop_agents() {
    print_header "Stopping Agents"

    local agents=("scaffold" "validation" "e2e" "integration" "deployment")

    for agent in "${agents[@]}"; do
        if [ -f "${PID_DIR}/${agent}-agent.pid" ]; then
            local pid=$(cat "${PID_DIR}/${agent}-agent.pid")
            if kill -0 $pid 2>/dev/null; then
                print_status "Stopping ${agent} agent (PID: $pid)..."
                kill $pid
                rm "${PID_DIR}/${agent}-agent.pid"
                print_success "${agent} agent stopped"
            else
                print_warning "${agent} agent not running"
                rm "${PID_DIR}/${agent}-agent.pid"
            fi
        fi
    done
}

#############################################################################
# Main Commands
#############################################################################

cmd_start() {
    print_header "ðŸš€ Starting Development Environment"

    check_dependencies

    # Build the project first
    print_status "Building project..."
    cd "${PROJECT_ROOT}"
    pnpm build

    # Start services in order
    start_infrastructure
    sleep 2
    start_orchestrator
    sleep 2
    start_agents

    print_header "âœ… Development Environment Started"
    echo -e "${GREEN}All services are running!${NC}"
    echo ""
    echo "Services:"
    echo "  â€¢ PostgreSQL: localhost:5433"
    echo "  â€¢ Redis: localhost:6380"
    echo "  â€¢ Orchestrator API: http://localhost:3000"
    echo "  â€¢ Health Check: http://localhost:3000/api/v1/health"
    echo ""
    echo "Logs are available in: ${LOG_DIR}"
    echo "Generated apps will be in: ${AI_OUTPUT_DIR}"
    echo ""
    echo "Run '${SCRIPT_DIR}/dev status' to check service status"
    echo "Run '${SCRIPT_DIR}/dev stop' to stop all services"
}

cmd_stop() {
    print_header "ðŸ›‘ Stopping Development Environment"

    stop_agents
    stop_orchestrator
    stop_infrastructure

    print_success "All services stopped"
}

cmd_restart() {
    print_header "ðŸ”„ Restarting Development Environment"

    cmd_stop
    sleep 2
    cmd_start
}

cmd_status() {
    print_header "ðŸ“Š Development Environment Status"

    # Check Docker services
    echo -e "${CYAN}Docker Services:${NC}"
    docker-compose -f "${PROJECT_ROOT}/docker-compose.yml" ps
    echo ""

    # Check orchestrator
    echo -e "${CYAN}Orchestrator:${NC}"
    if [ -f "${PID_DIR}/orchestrator.pid" ]; then
        local pid=$(cat "${PID_DIR}/orchestrator.pid")
        if kill -0 $pid 2>/dev/null; then
            print_success "Running (PID: $pid)"
            if curl -s http://localhost:3000/api/v1/health | jq -r '.status' | grep -q "healthy"; then
                print_success "Health check: HEALTHY"
            else
                print_error "Health check: UNHEALTHY"
            fi
        else
            print_error "Not running (stale PID file)"
        fi
    else
        print_error "Not running"
    fi
    echo ""

    # Check agents
    echo -e "${CYAN}Agents:${NC}"
    local agents=("scaffold" "validation" "e2e" "integration" "deployment")
    for agent in "${agents[@]}"; do
        if [ -f "${PID_DIR}/${agent}-agent.pid" ]; then
            local pid=$(cat "${PID_DIR}/${agent}-agent.pid")
            if kill -0 $pid 2>/dev/null; then
                print_success "${agent}: Running (PID: $pid)"
            else
                print_error "${agent}: Not running (stale PID file)"
            fi
        else
            print_error "${agent}: Not running"
        fi
    done
    echo ""

    # Check AI output directory
    echo -e "${CYAN}AI Output Directory:${NC}"
    if [ -d "${AI_OUTPUT_DIR}" ]; then
        local count=$(find "${AI_OUTPUT_DIR}" -maxdepth 1 -type d | wc -l)
        print_status "Location: ${AI_OUTPUT_DIR}"
        print_status "Projects: $((count - 1))"
    else
        print_warning "Directory not found: ${AI_OUTPUT_DIR}"
    fi
}

cmd_purge() {
    print_header "ðŸ—‘ï¸  Purging AI Output Directory"

    if [ -d "${AI_OUTPUT_DIR}" ]; then
        echo -e "${YELLOW}WARNING: This will delete all generated applications!${NC}"
        echo -e "Directory: ${AI_OUTPUT_DIR}"
        echo ""
        read -p "Are you sure? (y/N): " -n 1 -r
        echo ""

        if [[ $REPLY =~ ^[Yy]$ ]]; then
            print_status "Removing ${AI_OUTPUT_DIR}..."
            rm -rf "${AI_OUTPUT_DIR}"
            mkdir -p "${AI_OUTPUT_DIR}"
            print_success "AI output directory purged"
        else
            print_warning "Purge cancelled"
        fi
    else
        print_warning "AI output directory not found"
    fi
}

cmd_logs() {
    local service="${1:-all}"

    print_header "ðŸ“‹ Viewing Logs"

    case $service in
        orchestrator)
            tail -f "${LOG_DIR}/orchestrator.log"
            ;;
        scaffold|validation|e2e|integration|deployment)
            tail -f "${LOG_DIR}/${service}-agent.log"
            ;;
        all)
            echo "Available logs:"
            ls -la "${LOG_DIR}/"*.log 2>/dev/null || echo "No logs found"
            echo ""
            echo "Use '${SCRIPT_DIR}/dev logs <service>' to view specific logs"
            echo "Services: orchestrator, scaffold, validation, e2e, integration, deployment"
            ;;
        *)
            print_error "Unknown service: $service"
            ;;
    esac
}

cmd_clean() {
    print_header "ðŸ§¹ Cleaning Development Environment"

    print_status "Stopping all services..."
    cmd_stop

    print_status "Removing Docker volumes..."
    docker-compose -f "${PROJECT_ROOT}/docker-compose.yml" down -v

    print_status "Cleaning logs..."
    rm -rf "${LOG_DIR}"/*.log

    print_status "Cleaning PID files..."
    rm -rf "${PID_DIR}"/*.pid

    print_status "Cleaning node_modules (optional)..."
    read -p "Remove node_modules? (y/N): " -n 1 -r
    echo ""
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        find "${PROJECT_ROOT}" -name "node_modules" -type d -prune -exec rm -rf {} \;
        print_success "node_modules removed"
    fi

    print_success "Environment cleaned"
}

cmd_help() {
    cat <<EOF
${CYAN}Agentic SDLC Development Environment Manager${NC}

Usage: ${SCRIPT_DIR}/dev <command> [options]

Commands:
  ${GREEN}start${NC}      Start all development services
  ${GREEN}stop${NC}       Stop all development services
  ${GREEN}restart${NC}    Restart all development services
  ${GREEN}status${NC}     Show status of all services
  ${GREEN}logs${NC}       View logs (logs <service> or logs all)
  ${GREEN}purge${NC}      Delete all generated applications in ai.output
  ${GREEN}clean${NC}      Clean everything (stop services, remove volumes, logs)
  ${GREEN}help${NC}       Show this help message

Services:
  â€¢ PostgreSQL (port 5433)
  â€¢ Redis (port 6380)
  â€¢ Orchestrator API (port 3000)
  â€¢ Scaffold Agent
  â€¢ Validation Agent
  â€¢ E2E Agent
  â€¢ Integration Agent
  â€¢ Deployment Agent

Examples:
  ${SCRIPT_DIR}/dev start      # Start everything
  ${SCRIPT_DIR}/dev status     # Check what's running
  ${SCRIPT_DIR}/dev logs orchestrator  # View orchestrator logs
  ${SCRIPT_DIR}/dev purge      # Clean generated apps
  ${SCRIPT_DIR}/dev stop       # Stop everything

Environment Variables:
  OUTPUT_DIR    Override AI output directory (default: ${AI_OUTPUT_DIR})
  LOG_LEVEL     Set log level (default: info)

EOF
}

#############################################################################
# Main Entry Point
#############################################################################

# Parse command
COMMAND="${1:-help}"

case $COMMAND in
    start)
        cmd_start
        ;;
    stop)
        cmd_stop
        ;;
    restart)
        cmd_restart
        ;;
    status)
        cmd_status
        ;;
    logs)
        cmd_logs "${2:-all}"
        ;;
    purge)
        cmd_purge
        ;;
    clean)
        cmd_clean
        ;;
    help|--help|-h)
        cmd_help
        ;;
    *)
        print_error "Unknown command: $COMMAND"
        cmd_help
        exit 1
        ;;
esac